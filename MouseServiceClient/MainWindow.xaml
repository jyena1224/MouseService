<Window x:Class="MouseServiceClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mouse Service Client A" Height="200" Width="400">
    <Grid>
        <Label Content="Mouse Coordinates:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="16"/>
        <TextBlock Text="{Binding MouseCoordinates}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,10,10" FontSize="16"/>
        <Button Content="Start Monitoring" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="150" Click="StartMonitoring_Click"/>
    </Grid>
</Window>
